<h1 class="mb-5 text-center">თემის დამატება</h1>

<form action="/topics" method="post">

  <div class="form-group mb-5">
    <label for="title">სათაური</label>
    <input type="text" class="form-control" name="title" placeholder="თემის სათაური...">
  </div>

  <div class="form-group mb-5">
    <label for="topic">თემის შინაარსი</label>
    <textarea class="form-control" name="topic" rows="3" placeholder="აღწერეთ თემა..." ></textarea>
  </div>

  <input type="submit" class="btn btn-outline-warning" value="დამატება">

</form>